<div class="col-sm-6 block row block-shop-feed-item">
  <div class="col-md-4">
    <div class="row thumbnail">
      <%= link_to shop do %>
        <%= image_tag shop.avatar.url %>
      <% end %>
    </div>
  </div>
  <div class="col-md-8">
    <div class="row content">
      <h3><%= link_to shop.name, shop %></h3>
      <%= render "shared/shop_status_label", shop: shop %>
      <input id="shop-average-rating" type="number"
        class="rating-loading star-rating" data-size="sm"
        value=<%= shop.averate_rating %> >
      <div class="description quote"><p><%= shop.description %></p></div>
      <div>
        <ul class="tags">
          <% shop.all_tags.each do |tag| %>
            <li>
              <%= link_to tag.name, tag_path(tag), class: "tag" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
